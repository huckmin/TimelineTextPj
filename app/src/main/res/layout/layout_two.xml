<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/typeTwoTitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:layout_above="@+id/contentText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:text="제목 표시부분"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contentText"
            android:layout_alignStart="@+id/contentText"
            android:layout_below="@+id/contentText"
            android:layout_marginTop="11dp"
            android:text="날짜표시" />

        <TextView
            android:id="@+id/todoText"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/typeTwoTitle"
            android:layout_alignBottom="@+id/typeTwoTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="하고싶은"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/typeTwoTitle"
            android:layout_alignStart="@+id/typeTwoTitle"
            android:layout_centerVertical="true"
            android:text="내용작성" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>